<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title Text Styles -->
    <style name="BakingAppTitleTextStyle">

        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:fontFamily">@font/croissant_one_xml</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:paddingBottom">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingLeft">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingRight">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingTop">@dimen/stepDetailTextViewPadding</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <!-- CardView Styles -->
    <style name="BakingAppCardView">

        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:layout_marginLeft">@dimen/cardViewMargin</item>
        <item name="android:layout_marginRight">@dimen/cardViewMargin</item>
        <item name="android:elevation">@dimen/cardview_compat_inset_shadow</item>

    </style>

    <!-- Recipe CardView Text Styles -->
    <style name="BakingAppRecipeCardViewTextStyle">

        <item name="android:fontFamily">@font/croissant_one_xml</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/recipeTextSize</item>
        <item name="android:paddingBottom">@dimen/CardTextViewPadding</item>
        <item name="android:paddingLeft">@dimen/CardTextViewPadding</item>
        <item name="android:paddingRight">@dimen/CardTextViewPadding</item>
        <item name="android:paddingTop">@dimen/CardTextViewPadding</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <!-- Step CardView Text Styles -->
    <style name="BakingAppStepCardViewTextStyle">

        <item name="android:fontFamily">@font/croissant_one_xml</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/stepTextSize</item>
        <item name="android:paddingBottom">@dimen/CardTextViewPadding</item>
        <item name="android:paddingLeft">@dimen/CardTextViewPadding</item>
        <item name="android:paddingRight">@dimen/CardTextViewPadding</item>
        <item name="android:paddingTop">@dimen/CardTextViewPadding</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <!-- Ingredient Text Styles -->
    <style name="BakingAppIngredientTextStyle">

        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/ingredientTextSize</item>
        <item name="android:paddingBottom">@dimen/ingredientTextViewPadding</item>
        <item name="android:paddingLeft">@dimen/ingredientTextViewPadding</item>
        <item name="android:paddingRight">@dimen/ingredientTextViewPadding</item>
        <item name="android:paddingTop">@dimen/ingredientTextViewPadding</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <!-- Step Detail Text Styles -->
    <style name="BakingAppStepDetailTextStyle">

        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/instructionsTextSize</item>
        <item name="android:paddingBottom">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingLeft">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingRight">@dimen/stepDetailTextViewPadding</item>
        <item name="android:paddingTop">@dimen/stepDetailTextViewPadding</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <!-- Button style -->
    <style name="BakingAppButtonStyle">

        <item name="android:fontFamily">@font/croissant_one_xml</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/cardview_light_background</item>

    </style>

    <!-- ToolBar Theme -->
    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

</resources>
