<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bakingapp.fragments.ButtonFragment"
    android:id="@+id/button_frame_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_step_button"
            android:text="@string/prev_step_string"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/croissant_one_xml"
            android:textColor="@android:color/black"
            android:textSize="@dimen/buttonFontSize"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_step_button"
            android:text="@string/next_step_string"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/croissant_one_xml"
            android:textColor="@android:color/black"
            android:textSize="@dimen/buttonFontSize"/>

    </LinearLayout>

</FrameLayout>
